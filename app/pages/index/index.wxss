/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.banner {
  width: 100%
}
.slide-image {
  width: 100%;
}
.section {
  width: 100%;
}
.section .sec-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-left: 2px solid green;
  margin: 10px 0;
}

.sec-header .title {
  font-size: 14px;
  padding-left: 5px;
}
.sec-header .more {
  font-size: 12px;
  color: green;
  padding-right: 10px;
}

.product-list {
  display: flex;
  flex-flow: wrap;
  justify-content: space-around;
}
.product-list .item {
  width: 350rpx;
  height: 200rpx;
  background: green;
  margin-bottom: 10px;
}
 .hot-list {
  display: flex;
  flex-direction: column;
} 
.hot-list .item {
  margin-bottom: 15rpx;
}
.hot-list .img {
  width: 100%;
  height: 300rpx;
  background: green;
}
.hot-list .item .sec {
  font-size: 12px;
  color: #666666;
  line-height: 16px;
}